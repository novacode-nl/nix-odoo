    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Odoo",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${workspaceRoot}/.venv/bin/python",
            // "console": "externalTerminal",
            "program": "${workspaceRoot}/odoo/odoo-bin",
             "args": [
                "--config=odoo.conf",
            ],
            "cwd": "${workspaceRoot}",
            "env": {},
            "envFile": "${workspaceRoot}/.venv",
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}
